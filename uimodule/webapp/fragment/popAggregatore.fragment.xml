<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="popAggregatore" title="{i18n>popAggregatore}">
    <content>
      <VBox class="sapUiSmallMargin">
        <HBox height="4em">
          <Text text="{i18n>pAggregatore}" textAlign="End" width="8em" class="sapUiSmallMarginEnd sapUiTinyMarginTop" />
          <Input id="Aggregatore" enabled="false" />
        </HBox>  
        <HBox height="4em">
          <Text text="{i18n>pDescrizione}" textAlign="End" width="8em" class="sapUiSmallMarginEnd sapUiTinyMarginTop" />
          <Input id="descAggregatore" />
        </HBox> 
        <HBox height="15em">
          <Text text="{i18n>pNote}" textAlign="End" width="8em" class="sapUiSmallMarginEnd sapUiTinyMarginTop" />
          <TextArea id="vTextArea" showExceededText="true" maxLength="255" width="50em" height="15em" valueState="{= ${/value}.length > 255 ? 'Warning' : 'None' }"/>   
        </HBox> 
      </VBox>                            
    </content>
    <beginButton>
			<Button text="{i18n>Conferma}" type="Emphasized" press="onConfirmAgg"/>
		</beginButton>
    <endButton>
        <Button text="{i18n>Annulla}" type="Emphasized" press="onCloseAgg"/>
    </endButton>
	</Dialog>
</core:FragmentDefinition>